+
+export PYTHONPATH="${package_dir}"/mujoco
+python "${package_dir}"/mujoco/codegen/generate_enum_traits.py > \
+    mujoco/enum_traits.h
+python "${package_dir}"/mujoco/codegen/generate_function_traits.py > \
+    mujoco/function_traits.h
